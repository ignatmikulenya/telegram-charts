{
  "include": ["./src"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,

    "target": "es2020",
    "module": "es2020",
    "lib": ["DOM", "DOM.Iterable", "es2020"],

    "strict": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
